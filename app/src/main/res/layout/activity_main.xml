<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.petasoft.gustavo.locateplayer.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#00CDCD"
        android:layout_alignParentStart="false"
        android:gravity="center"
        android:layout_weight="0.03">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:text="LOCATE"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:text="PLAYER"
            android:textSize="28sp"
            android:textAlignment="center"
            android:gravity="center_vertical" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:id="@+id/musicListView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.16"/>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="#1A1A1A"
        android:layout_weight="0.47">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/albumImage"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/defaultalbumimage"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:id="@+id/musicNameText"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="teste"
                    android:layout_marginTop="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/artistText"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:text="teste" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/currentTime"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:text="00:00" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:text="/" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/musicTime"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:text="00:00" />
                </LinearLayout>

                <SeekBar
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar"
                    android:progressDrawable="@layout/progress_bar"
                    android:minHeight="3dip"
                    android:maxHeight="3dip"
                    android:thumb="@layout/seekbar_thumb"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="#1C242A"
        android:layout_weight="0.35"
        android:weightSum="1"
        android:gravity="center">

        <ImageView
            android:layout_width="67dp"
            android:layout_height="56dp"
            android:id="@+id/imageView3"
            android:src="@drawable/nextleftbutton"
            android:onClick="previousMusic"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_vertical"
            android:src="@drawable/playbutton"
            android:onClick="playPauseMusic"
            android:clickable="true"/>

        <ImageView
            android:layout_width="67dp"
            android:layout_height="56dp"
            android:id="@+id/imageView2"
            android:src="@drawable/nextrightbutton"
            android:onClick="nextMusic"
            />


    </LinearLayout>
</LinearLayout>
